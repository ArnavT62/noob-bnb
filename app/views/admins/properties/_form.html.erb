<%= form_with model: [:admins, @property], local: true, multipart: true, class: "space-y-6" do |form| %>
  <% if @property.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @property.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div class="sm:col-span-2">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :headline, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :headline, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
   <div class="sm:col-span-2">
   <%= form.label :host_name, class: "block text-sm font-medium text-gray-700" %>
   <%= form.text_field :host_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
   </div>
    <div>
      <%= form.label :address_1, "Address Line 1", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :address_1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :address_2, "Address Line 2", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :address_2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :city, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :state, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :state, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :country, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :country, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :price, "Price", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :price, step: 0.01, value: @property.price&.amount, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :guest_count, "Guest Count", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :guest_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :bedroom_count, "Bedroom Count", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :bedroom_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :bed_count, "Bed Count", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :bed_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :images, "Property Images", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :images, multiple: true, accept: "image/*", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      <p class="mt-1 text-xs text-gray-500">You can select multiple images</p>
      
      <% if @property.persisted? && @property.images.attached? %>
        <div class="mt-4">
          <p class="text-sm font-medium text-gray-700 mb-2">Current Images (<%= @property.images.count %>):</p>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <% @property.images.each do |image| %>
              <div class="relative">
                <%= image_tag image, class: "h-20 w-full object-cover rounded-md border border-gray-200" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admins_properties_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= form.submit class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>

