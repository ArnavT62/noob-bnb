<%= form_with model: [property, review || Review.new], local: true, class: "space-y-6 mt-4", html: { id: "review-form-content" } do |form| %>
  <% if @review&.errors&.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @review.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= form.label :content, "Your Review", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :content, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Share your experience..." %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <%= form.label :cleanliness_rating, "Cleanliness", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :cleanliness_rating, in: 1..5, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "1-5" %>
      </div>

      <div>
        <%= form.label :accuracy_rating, "Accuracy", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :accuracy_rating, in: 1..5, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "1-5" %>
      </div>

      <div>
        <%= form.label :checkin_rating, "Check-in", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :checkin_rating, in: 1..5, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "1-5" %>
      </div>

      <div>
        <%= form.label :communication_rating, "Communication", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :communication_rating, in: 1..5, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "1-5" %>
      </div>

      <div>
        <%= form.label :location_rating, "Location", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :location_rating, in: 1..5, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "1-5" %>
      </div>

      <div>
        <%= form.label :value_rating, "Value", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :value_rating, in: 1..5, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "1-5" %>
      </div>
    </div>

    <div class="flex justify-end space-x-3 pt-4">
      <button type="button" onclick="document.getElementById('review-form').classList.add('hidden')" class="rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
        Cancel
      </button>
      <%= form.submit "Submit Review", class: "rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>
<% end %>

