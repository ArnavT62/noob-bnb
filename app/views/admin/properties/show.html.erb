<div class="mb-6">
  <%= link_to "â† Back to Properties", admin_properties_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
</div>

<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @property.name %></h1>
        <p class="mt-1 text-sm text-gray-500"><%= @property.headline %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_admin_property_path(@property), 
            class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
        <%= link_to "Delete", admin_property_path(@property), method: :delete,
            data: { confirm: "Are you sure you want to delete this property?" },
            class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500" %>
      </div>
    </div>

    <% if @property.images.attached? %>
      <div class="mb-6">
        <h2 class="text-lg font-medium text-gray-900 mb-3">Images</h2>
        <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4">
          <% @property.images.each do |image| %>
            <div class="aspect-w-1 aspect-h-1 overflow-hidden rounded-lg bg-gray-100">
              <%= image_tag image, class: "h-full w-full object-cover object-center" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-3">Description</h2>
        <p class="text-sm text-gray-700"><%= @property.description %></p>
      </div>

      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-3">Details</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Price</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= humanized_money_with_symbol(@property.price) if @property.price %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Guests</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @property.guest_count %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Bedrooms</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @property.bedroom_count %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Beds</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @property.bed_count %></dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="mt-6">
      <h2 class="text-lg font-medium text-gray-900 mb-3">Address</h2>
      <p class="text-sm text-gray-700">
        <%= @property.address_1 %><br>
        <%= @property.address_2 %><br>
        <%= @property.city %>, <%= @property.state %><br>
        <%= @property.country %>
      </p>
    </div>
  </div>
</div>


